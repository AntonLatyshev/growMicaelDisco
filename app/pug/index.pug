extends ./layouts/_layout.pug
block content
  .main
    .main-carousel
      - var i = 0
      while ( i < 5 )
        .main-carousel__slide(style="background-image: url('/image/data/main-carousel.jpg')")
          .main-carousel__block
            .main-carousel__title GROW. IN.UA
            .main-carousel__subtitle Cырье, оборудование, а также биохимия.
            +button('в каталог')
            .main-carousel__line-top
            .main-carousel__line-bottom
          +data('main-carousel-yellow-block.png').main-carousel__yellow-block
          +data('main-carousel-img.png').main-carousel__img
          - i++
    .tab-catalog
      .tab
        ul.tab__list
          - var arr = ['Удобрения', 'Агрохимия', 'Аксессуары', 'Схемы и инструкции', 'Вентиляция', 'Гидропонические системы', 'Декор и дизайн', 'GROW BOX', 'Освещение', 'Субстраты', 'Защита растений', 'Кассеты, теплички, горшки', 'Приборы измерения', 'Капельный полив', 'Семена', 'Комиссионный отдел']
          - var i = 0
          for item in arr
            li.tab__item
              a(href="#tab-"+i).tab__link= item
              - i++
        .tab__container
          - var a = 0
          while (a < arr.length)
            .tab__content(id="tab-"+a)
              .tab-catalog__section(style="background-image:url(/image/data/tab-catalog.jpg)")
                .tab-catalog__block
                  .tab-catalog__title Гидропоника
                  .tab-catalog__subtitle Вещества, применяемые для улучшения питания растений, свойств почвы, повышения урожаев.
                  a.tab-catalog__button(href="#") в каталог
              .tab-catalog__img(style="background-image:url(/image/data/tab-catalog-yellow-block.jpg)")
                +data('tab-catalog-img.jpg')
            - a++
    include ./includes/_features.pug
    .main-recommendation
      .main-recommendation__container
        a(href="#").main-recommendation__block-first
          span.main-recommendation__img
            +data('product.png')
          span.main-recommendation__description
            span.main-recommendation__title Комплект ДНАТ Monsanto Бибо F1 20 шт (Агропакгруп)
            span.main-recommendation__id Артикул: 123-9987
        a(href="#").main-recommendation__block-second
          span.main-recommendation__section
            span.main-recommendation__heading grow рекомендует
            span.main-recommendation__subtitle Вещества, для улучшения повышения урожаев.
          span.main-recommendation__img
            +data('main-recommendation-2.png')
          span.main-recommendation__description
            span.main-recommendation__title GHE ​RainForest 72
            span.main-recommendation__id Артикул: 123-9987
        a(href="#").main-recommendation__block-third
          span.main-recommendation__img
            +data('main-recommendation-3.png')
          span.main-recommendation__description
            span.main-recommendation__title Plagron Vita Race
            span.main-recommendation__id Артикул: 123-9987
    .stock(style="background-image: url('/image/data/stock-bg.jpg')")
      +data('logo-dark.png').stock__logo
      .stock__title Акция! Экономия до   30% на сырье, оборудование, а также биохимия.
      +button('подробнеее')
      +data('stock-img.png').stock__img
    include ./includes/_about-block.pug
    include ./includes/_brands.pug
    .block-title
        span ПОЧЕМУ ИМЕННО НАШ МАГАЗИН
    .trigger
      .trigger__container
        .trigger__block
          .trigger__border
            .trigger__value 16
            .trigger__value 32  06
          .trigger__title Гостеприимство, живое общение, супер сервис
          +data('trigger-1.jpg').trigger__img
        .trigger__block.trigger__block--odd
          .trigger__border
            .trigger__value 16
            .trigger__value 32  06
          .trigger__title Цены для профи и начинающих гроверов
          +data('trigger-2.jpg').trigger__img
        .trigger__block
          .trigger__border
            .trigger__value 16
            .trigger__value 32  06
          .trigger__title Express заказы- Express сервис
          +data('trigger-3.jpg').trigger__img
        .trigger__block.trigger__block--odd
          .trigger__border
            .trigger__value 16
            .trigger__value 32  06
          .trigger__title Индивидуальный подход к клиенту
          +data('trigger-4.jpg').trigger__img
        .trigger__block
          .trigger__border
            .trigger__value 16
            .trigger__value 32  06
          .trigger__title Неприметная упаковка
          +data('trigger-5.jpg').trigger__img
        .trigger__block
          .trigger__border
            .trigger__value 16
            .trigger__value 32  06
          .trigger__title Рот на замке (конфендинциальность)
          +data('trigger-6.jpg').trigger__img
    include ./includes/_callback-block.pug
